{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "files": [
    "src/main.ts",
    "src/app.module.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ]
}